@model BookClub.Models.LoginView
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers


<div class="row container d-flex justify-content-center align-items-center">
    <div class="col-lg-7 col-md-6 col-sm-12 p-2 mt-2 border shadow rounded">
        <h3 class="p-3">Login</h3>
        <form asp-action="Login" class="m-2">
            <div class="form-group mt-2">
                <label asp-for="userName" for="email">User Name</label>
                <input asp-for="userName" type="email" class="form-control" placeholder="Enter email">
                <span asp-validation-for="userName" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <label asp-for="password" for="password">Password</label>
                <input asp-for="password" type="password" class="form-control" placeholder="Password">
                <span asp-validation-for="password" class="text-danger"></span>
            </div>

            <button type="submit" value="Login" class="btn btn-primary pt-2">Login</button>
            <p class="small mt-2 pt-1 mb-0">
                Don't have an account? <a class="text-danger" asp-controller="home" asp-action="join"><b><u>Register</u></b></a>
            </p>
        </form>
    </div>
</div>
