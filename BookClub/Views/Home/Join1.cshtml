@model BookClub.Models.Rbuser

<div class="row container d-flex justify-content-center align-items-center">
	<div class="col-lg-6 col-md-6 col-sm-12 p-2 mt-2 border shadow rounded">
		<h3 class="p-2">Register with us...</h3>
		<form asp-action="Join" class="m-2">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<div class="form-group  mt-2">
				<label asp-for="FirstName" class="control-label">Name</label>
				<input asp-for="FirstName" type="text" class="form-control" name="firstName"
					   placeholder="Enter name" required />
				<span asp-validation-for="FirstName" class="text-danger"></span>
			</div>
			<div class="form-group mt-2">
				<label asp-for="UserName" class="control-label">Email</label>
				<input asp-for="UserName" type="email" class="form-control" name="userName"
					   placeholder="Enter email" required email />
				<span asp-validation-for="UserName" class="text-danger"></span>
			</div>

			<div class="form-group mt-2">
				<label asp-for="Gender" class="control-label" for="Gender">Gender</label><br>
				<div class="form-check form-check-inline">
					<label asp-for="Gender" class="form-check-label">Male</label>
					<input asp-for="Gender" class="form-check-input ml-1" name="Gender" type="radio" value="0" />
				</div>
				<div class="form-check form-check-inline">
					<label asp-for="Gender" class="form-check-label">Female</label>
					<input asp-for="Gender" class="form-check-input ml-1" name="Gender" type="radio" value="1" />
				</div>
				<span asp-validation-for="Gender" class="text-danger"></span>

			</div>

			<div class="form-group mt-2">
				<label asp-for="DateOfBirth" class="cotrol-label">Date of Birth</label>
				<input asp-for="DateOfBirth" type='date' class="form-control date" name="DOB" id="Date" required />
				<span asp-validation-for="DateOfBirth" class="text-danger"></span>
			</div>

			<div class="form-group mt-2">
				<label asp-for="Hobbies">Hobbies</label>
				<div *ngFor="let hobby of hobbies">
					<input id="hobby" type="checkbox" value="hobby.hobby" (change)="onChangeCheckbox(hobby.hobby , $any($event))" />
					{{hobby.hobby}}
				</div>
			</div>
			<div class="form-group mt-2">
				<label asp-for="Password" class="control-label">Password</label>
				<input asp-for="Password" type="password" class="form-control" name="password" placeholder="Enter Password" required />
				<span asp-validation-for="Password" class="text-danger"></span>
			</div>
			<div class="form-group mt-2">
				<label asp-for="ConfirmPassword" class="control-label">Confirm Password</label>
				<input asp-for="ConfirmPassword" type="password" class="form-control" name="confirmPassword" placeholder="Enter Password Again"
					   required />
				<span asp-validation-for="ConfirmPassword" class="text-danger"></span>
			</div>
			<button type="submit" class="btn btn-primary pt-1 mt-3">
				Submit
			</button>
			<p class="small fw-bold mt-2 pt-1 mt-2">
				Already a member?
				<a class="link-danger fw-bold">Login here</a>
			</p>
		</form>
	</div>
</div>
{{form.value |json}} 